<div class="conteudo">

  {{#each erros}}
    <div class="alert alert-danger"> {{texto}} </div>
  {{else}}

  {{/each}}
  <div class="conteudo-form">
    <form class="" action="/admin/categorias/new" method="post">
      <h2>Formulario de Categoria</h2>
      <div class="form-group">
        <label for="nome" style="color: #3f4954">Nome: </label>
        <input type="text" name="nome" id="nome" placeholder="Nome da categoria" class="form-control" required><br>
      </div>
      <div class="form-group">
        <label for="descricao" style="color: #3f4954">Descrição da categoria: </label>
        <textarea name="descricao" class="form-control"></textarea><br>
      </div>
      <input type="submit" name="criarCategoria" value="Criar Categoria" class="button-input">
    </form>
  </div>

</div>
