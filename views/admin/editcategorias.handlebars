<div class="conteudo">
<!-- -->
  {{#each erros}}
    <div class="alert alert-danger"> {{texto}} </div>
  {{else}}

  {{/each}}
  <div class="conteudo-form">
    <form class="" action="/admin/categorias/new" method="post">
      <h2>Formulario de edição de Categorias </h2>
      <input type="hidden" name="id" value="{{categoria._id}}">
      <div class="form-group">
        <label for="nome" style="color: #3f4954">Nome: </label>
        <input type="text" name="nome" id="nome" placeholder="Nome da categoria" class="form-control" value="{{categoria.nome}}" required><br>
      </div>
      <div class="form-group">
        <label for="descricao" style="color: #3f4954">Descrição da categoria: </label>
        <textarea name="descricao" class="form-control">{{categoria.descricao}}</textarea><br>
      </div>
      <input type="submit" name="criarCategoria" value="Editar Categoria" class="button-input">
    </form>
  </div>

</div>
