<div class="conteudo">

  {{#each erros}}
    <div class="alert alert-danger"> {{texto}} </div>
  {{else}}

  {{/each}}
  <div class="conteudo-form">
        <form action="/usuarios/login" method="post">
          <h2>Login: </h2>
          <div class="form-group">
            <label for="email" style="color: #3f4954">Email: </label>
            <input type="text" name="email" class="form-control" placeholder="Digite o seu email" required>
          </div>
          <div class="form-group">
            <label for="senha" style="color: #3f4954">Senha: </label>
            <input type="password" name="senha" class="form-control" placeholder="Digite a sua senha" required><br>
            <button type="submit" name="button" class="button-input">Entrar</button>
          </div>
        </form>

    </div>
</div>
