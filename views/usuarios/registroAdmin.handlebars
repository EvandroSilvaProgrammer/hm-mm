<div class="conteudo">
  {{#each erros}}
    <div class="alert alert-danger">
      {{texto}}
    </div>
  {{else}}
  {{/each}}
  <div class="conteudo-form">
        <form class="" action="" method="post">
          <h2>Usuario Administrativo: </h2>
          <div class="form-group">
            <label for="nome" style="color: #3f4954">Nome: </label>
            <input type="text" name="nome" class="form-control" placeholder="Digite o seu nome" required>
          </div>
          <div class="form-group">
            <label for="email" style="color: #3f4954">Email: </label>
            <input type="text" name="email" class="form-control" placeholder="Digite o seu email" required>
          </div>
          <div class="form-group">
            <label for="senha" style="color: #3f4954">Senha: </label>
            <input type="password" name="senha" class="form-control" placeholder="Digite a sua senha" required>
          </div>
          <div class="form-group">
            <label for="senha2" style="color: #3f4954">Confirmar Senha: </label>
            <input type="password" name="senha2" class="form-control" placeholder="Confirme a sua senha" required>
          </div>
          <button type="submit" name="button" class="button-input">Criar Conta</button>
        </form>
  </div>
</div>
